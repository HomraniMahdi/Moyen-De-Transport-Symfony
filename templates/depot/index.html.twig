{% extends 'dashboard.html.twig' %}

{% block title %}Depot index{% endblock %}

{% block body %}
    <h1>List des Depots </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Capacité</th>
                <th>Catégorie</th>
                <th>Localisation</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for depot in depots %}
            <tr>
                <td>{{ depot.id }}</td>
                <td>{{ depot.Capacite }}</td>
                <td>{{ depot.Categorie }}</td>
                <td>{{ depot.Localisation }}</td>
                <td>{{ depot.Etat }}</td>
                <td>
                    <a class="btn btn-outline-info" href="{{ path('depot_show', {'id': depot.id}) }}">show</a>
                <a class="btn btn-outline-warning" href="{{ path('depot_edit', {'id': depot.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('depot_new') }}">Create new</a>
{% endblock %}
