{% extends 'dashboard.html.twig' %}

{% block title %}Voyage{% endblock %}

{% block body %}
    <h1>Voyage</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ voyage.id }}</td>
            </tr>
            <tr>
                <th>Ref_voyage</th>
                <td>{{ voyage.refVoyage }}</td>
            </tr>
            <tr>
                <th>Ligne</th>
                <td>{{ voyage.ligne ? voyage.ligne|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>station_depart</th>
                <td>{{ voyage.getStationDepart()}}</td>
            </tr>
            <tr>
                <th>Station_arrive</th>
                <td>{{ voyage.getStationArrive()}}</td>
            </tr>
            <tr>
                <th>Date_depart</th>
                <td>{{ voyage.dateDepart ? voyage.dateDepart|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_arrive</th>
                <td>{{ voyage.dateArrive ? voyage.dateArrive|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-danger" href="{{ path('voyage_index') }}">back to list</a>

    <a class="btn btn-primary" href="{{ path('voyage_edit', {'id': voyage.id}) }}">edit</a>

